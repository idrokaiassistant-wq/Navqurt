generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- NAVQURT JADVALLARI ---

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  NEW
  CONFIRMED
  PREPARING
  ON_DELIVERY
  DELIVERED
  CANCELED
}

enum TasteType {
  ODDIY
  ACHCHIQ
  QALAMPIRLI
  RAYHONLI
  SHOKOLADLI
}

model User {
  id          String   @id @default(uuid())
  telegramId  BigInt   @unique
  fullName    String?
  phone       String?
  regionId    String?
  address     String?
  createdAt   DateTime @default(now())
  orders      Order[]
  region      Region?  @relation(fields: [regionId], references: [id])
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Int
  weight      Int
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  variants    Variant[]
  orderItems  OrderItem[]
}

model Variant {
  id          String    @id @default(uuid())
  productId   String
  type        TasteType
  priceDelta  Int       @default(0)
  product     Product   @relation(fields: [productId], references: [id])
  orderItems  OrderItem[]
}

model Region {
  id            String  @id @default(uuid())
  name          String  @unique
  deliveryPrice Int
  minFreeDelivery Int?
  isActive      Boolean @default(true)
  users         User[]
  orders        Order[]
}

model Order {
  id          String      @id @default(uuid())
  userId      String
  regionId    String
  totalAmount Int
  deliveryFee Int
  status      OrderStatus @default(NEW)
  comment     String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  user        User        @relation(fields: [userId], references: [id])
  region      Region      @relation(fields: [regionId], references: [id])
  items       OrderItem[]
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  productId String
  variantId String?
  quantity  Int
  price     Int
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
  variant   Variant? @relation(fields: [variantId], references: [id])
}